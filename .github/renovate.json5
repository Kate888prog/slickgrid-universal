{
  '$schema': 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['config:base', 'group:allNonMajor'],
  labels: ['dependencies'],
  ignorePaths: ['**/__tests__/**'],
  dependencyDashboard: true,
  pin: false,
  rangeStrategy: 'bump',
  packageRules: [
    {
      depTypeList: ['peerDependencies'],
      enabled: false,
    },
  ],
  ignoreDeps: [
    'node',
  ],
  schedule: ['on friday'],
}
